<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header1">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@null</item> <!-- Fixed: Removed android: -->
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#ffdbd1</item>
        <item name="fontFamily">@font/googlesansbold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mapbutton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#E9B7B9</item>
        <item name="fontFamily">@font/googlesansbold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/otp_background</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BookingDetailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>